<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Row style -->
    <style name="Widget.Wordle.MotionLayout.Row" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_marginTop">64dp</item>
    </style>

    <!-- Words Grid Tiles Style -->
    <style name="Widget.Wordle.TextView.WordsGrid" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">32sp</item>
    </style>

    <!-- HintView Child Style -->
    <style name="Widget.Wordle.TextView.Hints" parent="Widget.Wordle.TextView.WordsGrid">
        <item name="android:rotation">180</item>
        <item name="android:rotationY">180</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Keyboard Buttons Style -->
    <style name="Widget.Wordle.Button.Keyboard" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

</resources>