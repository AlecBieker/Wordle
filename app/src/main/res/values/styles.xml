<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Row style -->
    <style name="Widget.Wordle.MotionLayout.Row" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">86dp</item>
        <item name="android:layout_marginTop">64dp</item>
    </style>

    <!-- Words Grid Tiles Style -->
    <style name="Widget.Wordle.TextView.WordsGrid" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">40sp</item>
    </style>

    <!-- Example Tiles Style -->
    <style name="Widget.Wordle.Help.Tile" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/filled_border</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!-- Help Text Style -->
    <style name="Widget.Wordle.Text.Subtext" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <!-- Start Screen Header Style -->
    <style name="Widget.Wordle.Start.Header" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">34sp</item>
    </style>

    <!-- Settings Screen big text -->
    <style name="Widget.Wordle.Settings.BigText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">28sp</item>
    </style>
    
    <!-- Keyboard Buttons Style -->
    <style name="Widget.Wordle.Button.Keyboard" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="layout_constraintVertical_chainStyle">packed</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">@color/key_color</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!-- Dialog Buttons Style -->
    <style name="Widget.Wordle.Dialog.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <!-- Dialog TextViews Style -->
    <style name="Widget.Wordle.Dialog.Header" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <!-- Stats TextViews Style -->
    <style name="Widget.Wordle.Stats.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Stats Values Style -->
    <style name="Widget.Wordle.Stats.Value" parent="Widget.Wordle.Stats.TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Bar Graph Style -->
    <style name="Widget.Wordle.Stats.BarGraph" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/hint_text_color</item>
        <item name="android:background">@drawable/bar_graph</item>
    </style>

    <!-- Bar Graph Row Numbers Style -->
    <style name="Widget.Wordle.Stats.Rows" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>
</resources>